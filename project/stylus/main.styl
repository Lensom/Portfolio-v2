@import "_font-face.styl"
@import "_libs.styl"
@import "_vars.styl"

// all
*
	box-sizing border-box
	&:before,
	&:after
		box-sizing border-box

// placeholder
::placeholder
	color #666
	opacity 1

// input required valid/invalid
body input:focus:required:invalid,
body textarea:focus:required:invalid
	color #666
body input:required:valid,
body textarea:required:valid
	color #666

html, body
	height 100%

body
	font-size 16px
	min-width 320px
	position relative
	line-height 1.65
	font-family $default-font
	overflow-x hidden
	margin 0

img
	display block
	max-width 100%
	height auto

ul 
	margin 0
	padding 0
	cursor default

li 
	list-style-type none

h1,h2,h3,
h4,h5,h6 
	margin 0
	padding 0
	
p 
	margin 0
	padding 0

a
	transition .2s color ease-in
	text-decoration none

.wrapper
	margin 0 auto
	width 1620px
	padding 45px 30px


::-webkit-scrollbar {
  width: 3px;
  height: 3px;
}
::-webkit-scrollbar-button {
  background-color: #666;
}
::-webkit-scrollbar-track {
  background-color: #999;
}
::-webkit-scrollbar-track-piece {
  background-color: #fff;
}
::-webkit-scrollbar-thumb {
  height: 50px;
  background-color: #666;
  border-radius: 3px;
}
::-webkit-scrollbar-corner {
  background-color: #999;
}
::-webkit-resizer {
  background-color: #666;
}

header 
	background-color $black
	.wrapper
		height 100vh		
		display flex
		flex-direction: column
		justify-content space-between
		align-items: stretch

.title
	position relative
	h2
		color $white
		z-index 10
		// &:after
		// 	z-index 1
		// 	content: ''
		// 	position absolute
		// 	top 0
		// 	left 0
		// 	width 15%
		// 	height 100%
		// 	background-color $white


.top-line
	display flex
	justify-content: space-between

.navigation	
	&-list		
	&-item
		display inline-block
		margin-right 30px
		a 
			color $white
			display inline-block
			text-transform uppercase
			font-family $default-fontBold 
			font-size 16px
			border-bottom 2px solid transparent 
			&:hover
				color $red
	&-btn
		display none
		cursor pointer
		width 30px
		height 30px
		background-color transparent
		outline 1px solid transparent
		transition all 0.3 ease
		border none
		user-select none
		position relative
		z-index 5
	&-bar 
		display inline-block
		position absolute
		top 0
		left 0
		width 30px
		height 2px
		background-color $white
		transition .3s all ease
	.bar-2
		top 8px
	.bar-3
		top 16px
	.active
		.bar-1
			background-color transparent
		.bar-2
			transform translateY(0px) rotate(-45deg)
		.bar-3
			transform translateY(-8px) rotate(45deg)

	.current
		border-bottom 2px solid $red
	
.navigation
	&-list.show
		margin 0 auto
		z-index 4
		position fixed
		display flex
		flex-direction column
		width 100%
		height 100%
		top 0
		left 0
		justify-content center
		align-items center
		transform: translateX(0)
		transition all .3s ease
		background-color $black
		.navigation-item
			margin 10px 0

.social
	display flex
	justify-content space-between
	z-index 3
	&-list 
		position relative
		&:after 
			position absolute
			top 0
			right -16px
			content ''
			width 6px
			height 96%
			background-image: linear-gradient(to bottom, $black, #3b111c, #740f28, #ae012c, $red);
	a
		color $white
		font-size 22px
		&:hover
			color $red

.logo 
	color $white
	position relative
	a 
		position absolute
		bottom 0

.main
	color $white
	display flex
	justify-content space-between

.language
	z-index 3
	position relative
	
	&-list
	&-item
		display inline-block
		margin-left 10px
		a
			color $white
			display inline-block
			font-size 16px
			font-family $default-fontBold
			text-transform uppercase
			border-bottom 2px solid transparent
			&:hover
				color $red
	&:after 
		position absolute
		top 4px
		right -16px
		content ''
		width 6px
		height 100%
		background-image: linear-gradient(to top, $black, #3b111c, #740f28, #ae012c, $red);
	.current
		border-bottom 2px solid $red

.work
	background-color $black
	position relative
	&-items 
		display flex
		justify-content: space-between
		position relative
	&-full
		transform: translateY(200%);
		transition: all .7s ease;
		border-radius: 3px;
		position: fixed
		width 100%
		height 100%
		padding 40px
		background-color black
		top 0
		left 0		
		z-index 10
		display flex
		align-self: center
		justify-content space-between
		&-wrapper-img
			width 50%
			overflow-y scroll	
			transform: translateX(-200%);
			transition: all 2.5s ease;
	&-text
		width 50%
		padding-left 60px
		transform translateX(200%);
		color $white;
		transition: all 2.5s ease;
	&-title 
		font-size 40px
	&-type 
		margin 10px 0 20px
	&-list 
		margin 60px 0
	&-description 
		margin-bottom 60px
	.opened
		transform: translateY(0);
		.work-text
			transform translateX(0);
		.work-full-wrapper-img
			transform translateX(0);


.close
	&-btn
		width 30px
		height 30px
		background-color $white
		position absolute
		top 6.3%
		right 3%
		z-index 10
		border-radius 50%
		transition .2s all ease;
		&:hover
			transform scale(.8)
	&-bar
		position absolute
		width 20px
		height 3px
		left 5px
		top 14px
		background-color $black
		transition .2s all ease;
.bar-2
	transform rotate(45deg)
.bar-1
	transform rotate(-45deg)
	
// Buttons
.btn
	&-link
		color $white
		background-color $red
		padding 10px 20px
		border-radius 6px
		border: 1px solid $red
		display inline-block
		margin-top 30px
		transition all .2s ease
		outline none
		&:hover
			background-color $white
			color $black
			border-color #fff





@import "_media.styl" // Always at the end
